<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coolbg"
    tools:context="org.jimsd.jimsradioapp.SuggestionFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <TextView
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <EditText
                android:textAlignment="center"
                android:textColorHint="#000"
                android:textColor="#000"
                android:padding="10dp"
                android:background="@drawable/backgrund_edt"
                android:id="@+id/edt_add_suggest_name"
                android:textSize="15dp"
                android:hint="Name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"/>

            <EditText
                android:textAlignment="center"
                android:textColorHint="#000"
                android:textColor="#000"
                android:padding="10dp"
                android:background="@drawable/backgrund_edt"
                android:id="@+id/edt_add_suggest_email"
                android:textSize="15dp"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLength="256"/>

            <EditText
                android:id="@+id/edt_add_suggest_contact"
                android:textAlignment="center"
                android:textColorHint="#000"
                android:textColor="#000"
                android:padding="10dp"
                android:background="@drawable/backgrund_edt"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:hint="Contact Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="15"/>

            <EditText
                android:id="@+id/edt_add_suggest"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/backgrund_edt"
                android:hint="Feedback"
                android:lines="5"
                android:maxLines="6"
                android:minLines="2"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_submit_suggest"
                android:background="@drawable/button"
                android:layout_width="200dp"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
