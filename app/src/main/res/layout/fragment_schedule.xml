<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jimsd.jimsradioapp.ScheduleFragment"
    android:background="@drawable/coolbg"
    android:orientation="vertical">

    <TextView
        android:padding="15dp"
        android:background="@color/colorAccent"
        android:id="@+id/schedule_frag_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming schedules"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="20dp"
/>


    <ProgressBar
        android:id="@+id/progbar_schedule_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:padding="5dp"
        android:id="@+id/list_schedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:dividerHeight="2dp"
        android:divider="#6a99e6"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
